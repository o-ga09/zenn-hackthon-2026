      fileId:
        type: string
        description: ファイルID
    required:
      - mediaType
      - fileId
output:
  schema:
    type: object
    properties:
      description:
        type: string
        description: シーンの詳細な説明
      objects:
        type: array
        items:
          type: string
        description: 検出されたオブジェクト
      landmarks:
        type: array
        items:
          type: string
        description: 検出されたランドマーク
      activities:
        type: array
        items:
          type: string
        description: 検出されたアクティビティ
      mood:
        type: string
